<div class="hidden-print hidden-xs hidden-sm affix homeland-right">

  <%= link_to(" 发布话题 ", new_homeland_path, :class => "btn btn-default new-homeland-btn btn-block") %>

  <!-- 全部主题 -->
  <div class="all-homeland">
    <%= link_to homelands_path do %>
      <i class="fa fa-comments-o" aria-hidden="true"></i>
      <span>全部话题</span>
    <% end %>
  </div>


  <i class="fa fa-th-large" aria-hidden="true"></i>


  <!-- 主题分类 -->
  <div class="homeland-categories-list">
    <br>
    <div>
      <% Homeland::CATEGORIES.each do |categories| %>
        <%= link_to homelands_path(:categorie => categories) do %>
          <li><i class="fa fa-stop" aria-hidden="true"></i> <%= categories %></li>
        <% end %>
      <% end %>
    </div>
  </div> <hr>

  <div class="">
    <%= link_to homelands_path(:my => "my_homelands"), :class => "btn btn-sm btn-default btn-block" do %>
      <i class="fa fa-user-o" aria-hidden="true"></i> 我发布的
    <% end %>
    <%= link_to homelands_path(:my => "my_homeland_likes"), :class => "btn btn-sm btn-default btn-block" do %>
      <i class="fa fa-star-o" aria-hidden="true"></i> 我收藏的 
    <% end %>
  </div>



</div>
