              </div>
            <% end %>
          <% end %>
        </div>

      </div>

      <!-- 美股部分 -->
      <div class="col-sm-6 pyramid-list-box ">
        <div class="pyramid-flag row">
          <h2>美 股 <span>- US stocks -</span></h2>
        </div>

        <!-- list -->
        <div class="pyramid-ul row">
          <% @us_stock_pyramid[0..9].each do |us_stock| %>
