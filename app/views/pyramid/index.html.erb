    <div class="">

      <!-- A股部分 -->
      <div class="col-sm-6 pyramid-list-box ">
        <div class="pyramid-flag row">
          <h2>A 股 <span>- China A shares -</span></h2>
        </div>

        <!-- list -->
        <div class="pyramid-ul row">
          <% @stock_pyramid[0..9].each do |stock| %>
            <%= link_to stock_path(stock), target: "_blank" do %>
              <div class="pyramid-li col-sm-6 row">
                <%= Stock.find_by_easy_symbol(stock).name %> -
                <%= Stock.find_by_easy_symbol(stock).easy_symbol %>
                <span class="pull-right"><%= Stock.find_by_easy_symbol(stock).pyramid_rating %></span>
              </div>
            <% end %>
          <% end %>
        </div>

        <!-- list -->
        <div class="pyramid-ul row">
          <% @stock_pyramid[10..29].each do |stock| %>
            <%= link_to stock_path(stock), target: "_blank" do %>
