<div class="row wrapper">

  <!-- 同类行业列表栏 -->
  <div class="col-lg-2 hidden-md hidden-sm hidden-xs industry-list">

    <!-- 所属行业 -->
    <div class="industry-title">
      <%= @stock.industry %>
    </div>

    <!-- 所属行业股票列表 -->
    <div class="industry-li">
      <ul class="list-unstyled">
        <% @industrys.each do |stock| %>
          <%= link_to stock_path(stock) do %>
            <li><%= stock.easy_symbol %> - <%= stock.name %></li>
          <% end %>
        <% end %>
      </ul>
    </div>

  </div>

  <!-- 左表：股票信息+资产负债信息 分析 -->
  <div class="stock-info col-lg-5 col-md-12">

      <!-- 股票信息 -->
      <!-- <div class="stock-title"> -->                               <!-- 在 md 以下时左右布局 -->
      <div class="stock-title col-md-12 col-sm-12 row">        <!-- 在 md 以下时展开布局 -->
        <h1>
          <%= @stock.name %>
          <span> (<%= @stock.easy_symbol %>)</span>
        </h1>
        <h5>
          <%= @stock.industry %>
        </h5>

        <div class="main_business">
          <p title="<%= @stock.main_business %>"><span>主营业务: </span><%= @stock.main_business %></p>
        </div>
        <div class="to-finance-btn">
          <%= link_to("详细财报 >>", stock_path(@stock), :class => "btn btn-sm btn-default") %>
        </div>
      </div>

      <!-- 资产负债信息 -->
      <!-- <div class="table-left"> -->                                 <!-- 在 md 以下时左右布局 --> 
      <div class="table-left col-md-12 col-sm-12 row">          <!-- 在 md 以下时展开布局 -->
        <% if @stock.zcb != "" %>
          <%= render "main_finance_table_1" %>
          <%= render "main_finance_table_3" %>
        <% else %>
          <p>暂无数据</p>
        <% end %>
      </div>

    </div>

    <!-- 财务结构+偿债能力+经营能力+获利能力+现金流量 分析 -->
    <div class="table-right col-lg-5 col-md-12">
      <% if @stock.zcb != "" %>
        <%= render "main_finance_table_2" %>
      <% end %>
    </div>





</div>
