<div>

  <div>
    <%= link_to("新建股票数据", new_admin_stock_path, :class => "btn btn-default pull-right" ) %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>代码/symbol</th>
        <th>名称/name</th>
        <th>地域/regional</th>
        <th>网址/company_url</th>
        <th>version</th>
        <th>行业/industry</th>
        <th>利润表/lrb</th>
        <th>流量表/llb</th>
        <th>资产表/zcb</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @stocks.each do |stock| %>
        <tr>
          <td><%=link_to(stock.easy_symbol, admin_stock_path(stock)) %></td>
          <td><%= stock.name %></td>
          <!--  -->
          <% if stock.regional.nil? %>
            <td style="color: red">空</td>
          <% else %>
            <td><%= stock.regional %></td>
          <% end %>
          <!--  -->
          <% if stock.company_url.nil?%>
            <td style="color: red">空</td>
          <% else %>
            <td>是</td>
          <% end %>
          <!--  -->
          <% if stock.version.nil? %>
            <td style="color: red">空</td>
          <% else %>
            <td><%= stock.version %></td>
          <% end %>
          <!--  -->
          <% if stock.industry.nil? %>
            <td style="color: red">空</td>
          <% else %>
            <td><%= stock.industry %></td>
          <% end %>
          <!--  -->
          <% if stock.lrb.nil? || stock.lrb == "" %>
            <td style="color: red">空</td>
          <% else %>
            <td>是</td>
          <% end %>
          <!--  -->
          <% if stock.llb.nil? || stock.llb == ""  %>
            <td style="color: red">空</td>
          <% else %>
            <td>是</td>
          <% end %>
          <!--  -->
          <% if stock.zcb.nil? || stock.zcb == ""  %>
            <td style="color: red">空</td>
          <% else %>
            <td>是</td>
          <% end %>

          <td>
            <%= link_to("编辑", edit_admin_stock_path(stock), :class => "btn btn-xs btn-default") %>
            <%= link_to("删除", admin_stock_path(stock), method: :delete, :class => "btn btn-xs btn-default", data: { confirm: "确定删除" }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @stocks %>



</div>
