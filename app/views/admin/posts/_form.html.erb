<%= simple_form_for [:admin, @course, @post] do |f| %>

  <div class="form-group">
    <%= f.input :title, :label => "标题/title", input_html: { class: "form-control"} %>
    <%= f.input :catalog, :label => "目录码/catalog", input_html: { class: "form-control"} %>
    <%= f.input :section, :label => "章节名称/section", input_html: { class: "form-control"} %>
    <%= f.input :description, :label => "简介/description", input_html: { class: "form-control", :rows => 42, :id => "editor"} %>
    <%= f.submit "提交", :class => "btn btn-sm btn-default", :data => { disable_with: "Submiting..." } %>
  </div>

<% end %>

