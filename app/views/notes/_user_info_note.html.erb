<!-- 如果当前用户为登陆者 -->
<% if current_user && (current_user == @user || current_user.role == "admin") %>
  <% @notes.each do |note| %>
    <%= render :partial => "//notes/user_info_note_list", :locals => { :note => note } %>
  <% end %>
<% else %>
  <% @notes.where.not(:status => "私密").each do |note| %>
    <%= render :partial => "//notes/user_info_note_list", :locals => { :note => note } %>
  <% end %>
<% end %>
