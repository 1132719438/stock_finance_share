
<a data-toggle="modal" data-target="#momal-user-edit-<%= user.id %>">

  <!-- 头像 avatar -->
  <div class="user-avatar">
    <% if user.avatar.present? %>
      <%= image_tag(user.avatar, :class => "thumbnail img-responsive") %>
    <% else %>
      <%= image_tag("http://placehold.it/200x200&text=No Pic", :class => "thumbnail img-responsive") %>
    <% end %>
  </div>

  <!-- 用户名 username -->
  <div>
    <h3>
      <%= user.username %>
    </h3>
  </div>

</a>

<!-- 判断是否是用户本人, ture 则课编辑修改 -->
<% if current_user && user.id == current_user.id %>
  <%= render :partial => "user_modal_edit", :locals => { :user => user } %>
<% end %>

<!-- 简介 motto -->
<br>
<div>
  <%= user.motto %>
</div>
<hr>

<!-- 收藏笔记 -->
<% if !user.level_uniq("等待入场").blank? %>
  <h4>等待入场</h4>
  <ul class="list-unstyled">
    <% user.level_uniq("等待入场").each do |stock| %>
      <%= link_to stock_path(stock) do %>
        <li><%= stock.easy_symbol %> - <%= stock.name %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
<br>

<% if !user.level_uniq("近期关注").blank? %>
