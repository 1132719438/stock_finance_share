<!-- <a data-toggle="modal" data-target="#momal-user-edit-<%= user.id %>"> -->
  <!-- 头像 avatar -->
  <div class="user-avatar">
    <% if user.avatar.present? %>
      <%= image_tag(user.avatar, :class => "img-responsive") %>
    <% else %>
      <%= image_tag("http://placehold.it/200x200&text=No Pic", :class => "img-responsive") %>
    <% end %>
  </div>
<!-- </a> -->

<!-- 关注 / 取消关注  当前用户界面是用户本人时不可见 -->
<% if current_user && current_user != user %> <br>
  <% if current_user.attentions.where( :my_attention => user.id ).blank? %>
    <%= link_to("关注", fan_user_path, :method => :post, :class => "btn btn-block bg-success btn-xs") %>
  <% else %>
    <%= link_to("取消关注", un_fan_user_path, :method => :delete, :class => "btn btn-block bg-danger btn-xs") %>
  <% end %>
<% end %>

<!-- <a data-toggle="modal" data-target="#momal-user-edit-<%= user.id %>"> -->
  <!-- 用户名 username -->
  <div>
    <h3>
      <%= user.username %>

      <!-- 会员显示 -->
      <span class="pull-right">
        <% if user.role == "member" %>
          <% if current_user && current_user == user || current_user.role == "admin" %>
            <% if user.nper == 99 %>
              <a type="button" data-container="body" data-toggle="popover" data-placement="bottom" data-content="永久会员">
                <img src="https://i.loli.net/2018/03/30/5abe5064d2888.png">
              </a>
            <% else %>
            <a type="button" data-container="body" data-toggle="popover" data-placement="bottom" data-content="会员截止: <%= user.end_time.strftime("%Y/%m/%d") %>">
              <img src="https://i.loli.net/2018/03/30/5abe5064d2888.png">
            </a>
            <% end %>
          <% else %>
            <img src="https://i.loli.net/2018/03/30/5abe5064d2888.png">
          <% end %>
        <% elsif user.role == "admin" %>
          <a type="button" data-container="body" data-toggle="popover" data-placement="bottom" data-content="站长">
            <img src="https://i.loli.net/2018/03/31/5abe649f3c20a.png">
          </a>
        <% end %>
      </span>

    </h3>
  </div>
<!-- </a> -->


<!-- 判断是否是用户本人, ture 则课编辑修改 -->
<% if current_user && user == current_user %>
  <%= render :partial => "user_modal_edit", :locals => { :user => user } %>
<% end %>

<!-- 简介 motto -->
<br>
<div>
  <%= user.motto %>
</div>
<hr>

<!-- 收藏笔记 -->
<% if !user.level_uniq("等待入场").blank? %>
  <h4>等待入场</h4>
  <ul class="list-unstyled">
    <% user.level_uniq("等待入场").each do |stock| %>
      <%= link_to stock_path(stock) do %>
        <li><%= stock.easy_symbol %> - <%= stock.name %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
<br>

<% if !user.level_uniq("近期关注").blank? %>
  <h4>近期关注</h4>
  <ul class="list-unstyled">
    <% user.level_uniq("近期关注").each do |stock| %>
      <%= link_to stock_path(stock) do %>
        <li><%= stock.easy_symbol %> - <%= stock.name %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
<br>

<% if !user.level_uniq("长期关注").blank? %>
  <h4>长期关注</h4>
  <ul class="list-unstyled">
    <% user.level_uniq("长期关注").each do |stock| %>
      <%= link_to stock_path(stock) do %>
        <li><%= stock.easy_symbol %> - <%= stock.name %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>

<hr>


<!-- vip 下拉弹出到期时间 -->
<script>
  $(function () {
    $('[data-toggle="popover"]').popover()
  })
</script>
